{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ]
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "@controllers": "./src/controllers",
          "@models": "./src/models",
          "@routes": "./src/routes",
          "@config": "./src/config"
        }
      }
    ]
  ]
}
